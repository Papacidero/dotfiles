# Functions

# Sql
sqlSwitch() {
    if [[ $1 == 'start' ]]; then
        mysql.server start
    elif [[ $1 == 'stop' ]]; then
        mysql.server stop
    else
        printf "\nSQL Switch\n\n$ sql start | Will start mysql\n$ sql stop  | Will stop mysql\n"
    fi
    echo $i1
}


# Catalina
c() {
    if [[ $1 == 'start' ]]; then
        echo 'Starting Catalina...' && catalina start && echo 'Catalina Started!'
    elif [[ $1 == 'stop' ]]; then
        echo 'Stopping Catalina...' && catalina stop -force && echo 'Catalina Stopped!'
    elif [[ $1 == 'log' ]]; then
        tail -f /usr/local/Cellar/tomcat/8.5.4/libexec/logs/catalina.out
    elif [[ $1 == 'restart' ]]; then
        echo 'Restarting Catalina...' &&  c stop && c start && c log && echo 'Catalina Restarted!'
    else
        clear
    fi
}


# iCheck Project 
i() {
    if [[ $1 == 'check' ]]; then
        ember s --proxy http://localhost:3000
    elif [[ $1 == 'migrate' || $1 == 'm'  ]]; then
        cd /Users/vntcapa/Development/Workspace/icheck/icheck-server/ && npm run-script db:migrate && cd -
    elif [[ $1 == 'drop' || $1 == 'd' ]]; then
        cd /Users/vntcapa/Development/Workspace/icheck/icheck-server/ && npm run-script db:drop && cd -
    elif [[ $1 == 'c' ]]; then
        cd /Users/vntcapa/Development/Workspace/icheck/icheck-client/
    elif [[ $1 == 's' ]]; then
        cd /Users/vntcapa/Development/Workspace/icheck/icheck-server/
    else
        i
    fi
}


start() {
    echo 'Select project to start'
    select PROJECT in cdb icheck none
    do
       case $PROJECT in
          cdb) 
             cd /Users/vntcapa/Development/Workspace/CDB/filesystem/fenv && npm run deploy
             break
             ;;
          icheck)
             cd /Users/vntcapa/Development/Workspace/icheck/icheck-client/ && ember s --proxy http://localhost:3000
             break
          ;;
          none) 
             break 
          ;;
          *) echo "ERROR: Invalid selection" 
            break   
          ;;
       esac
    done
}

